{
  "compilerOptions": {
    "baseUrl": ".",
    "allowJs": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "declaration": true,
    "pretty": true,
    "module": "ES2015",
    "target": "es6",
    "lib": [
        "es2015",
        "ES6",
        "ES2016",
        "ES2017",
        "dom"
    ],
    "outDir": "build",
    "stripInternal": true,
    "allowSyntheticDefaultImports": true
  },
  "exclude": [
    "node_moudles",
    "build"
  ],
  "include": [
    "./src/index.ts",
    "./src/shaders/*.d.ts"
  ]
}
